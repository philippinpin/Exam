@model IEnumerable<FeedbackManagementSystem.Models.FeedbackModel>

@{
    ViewData["Title"] = "Feedback List";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">All Feedback Submissions</h2>

    <div class="mb-3">
        <a asp-action="FeedbackForm" class="btn btn-primary">Submit New Feedback</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Rating</th>
                        <th>Feedback Message</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Rating)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-secondary"></i>
                                    }
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FeedbackMessage)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No feedback has been submitted yet.
        </div>
    }
</div>