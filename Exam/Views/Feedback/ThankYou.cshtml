@model FeedbackManagementSystem.Models.FeedbackModel

@{
    ViewData["Title"] = "Thank You";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">Thank You for Your Feedback!</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>

                    <h4 class="mb-3">Your feedback has been submitted successfully.</h4>

                    <div class="card mb-4">
                        <div class="card-header">
                            Feedback Summary
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Name:</dt>
                                <dd class="col-sm-9">@Model.Name</dd>

                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9">@Model.Email</dd>

                                <dt class="col-sm-3">Rating:</dt>
                                <dd class="col-sm-9">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Model.Rating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-secondary"></i>
                                        }
                                    }
                                </dd>

                                <dt class="col-sm-3">Feedback:</dt>
                                <dd class="col-sm-9">@Model.FeedbackMessage</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="FeedbackForm" class="btn btn-outline-primary">Submit Another Feedback</a>
                        <a asp-action="FeedbackList" class="btn btn-outline-secondary">View All Feedback</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>